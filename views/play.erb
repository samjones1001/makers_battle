<h3><%= @player_1_name %> vs. <%= @player_2_name %></h3>
<h4><%= @player_2_name %>: <%= @player_2_hp %>hp</h4>

<h5>
  <% if @action %>
    <%= @player_1_name %> <%= @action %> <%= @player_2_name %>!
  <% end %>
</h5>

<form class="" action="/attack" method="post">
  <input type="submit" name="action" value="Attack!">
</form>
